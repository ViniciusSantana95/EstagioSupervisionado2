@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert" style="text-align: center;">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
} @if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert" style="text-align: center;">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<div class="board">
    <div class="lanes">
        <div class="swim-lane" id="todo-lane">
            <h3 class="heading">Pendente</h3>
            @foreach (var item in Model.Where(x => x.Feito == false))
            {
                var styleStatus = "rounded text-black bg-white"; if (DateTime.Now.Date > item.DataFinalizacao) { styleStatus = "rounded text-white bg-danger"; }
                else if
            (DateTime.Now.Date.Equals(item.DataFinalizacao)) { styleStatus = "bg-warning"; }

                <p class="task @styleStatus " draggable="true" onclick="location.href='@Url.Action("Edit", new { id = item.Id })'">
                    @item.NomeManutencao - <br /> @item.NomeCliente - @item.DataFinalizacao.ToString("dd/MM/yyyy")
                </p>

            }
        </div>

