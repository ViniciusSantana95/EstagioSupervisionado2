@model HardWareTech.DATA.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1>Usuário: @Html.DisplayName(Model.NomeUsuario)</h1>

<div>
    <hr />
    <div>
        <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model?.Id"><i class="fa-solid fa-pencil"></i>Alterar</a>
        <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Voltar</a>
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert" style="text-align: center;">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    } @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <div class="card">
        <div class="card-header">Dados do Usuario</div>
        <div class="card-body row">
            <div class="col-md">
                <div class="form-group col-md">
                    <label>Nome do Usuário</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.NomeUsuario)" readonly />
                </div>
            </div>
            <div class="form-group col-md">
                <div class="form-group col-md">
                    <label> @Html.DisplayNameFor(model => model.Login)</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.Login)" readonly />
                </div>
            </div>
            <div class="form-group col-md">
                <div class="form-group col-md">
                    <label> @Html.DisplayNameFor(model => model.Email)</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.Email)" readonly />
                </div>
            </div>
        </div>
    </div>
    <br />
    
    <br />
    
</div>