@model IEnumerable<HardWareTech.DATA.Models.Usuario>

@{
    ViewData["Title"] = "Listagem de Usuarios";
}

<h1 class="text-center display-4">Listagem de Usuarios</h1>

<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <div>
        <a class="btn btn-primary" role="button" asp-controller="Usuario" asp-action="Create"><i class="fa fa-plus-circle"></i> Novo Usuario</a>
    </div>
    <div>
        <a class="btn btn-danger" role="button" asp-controller="Usuario" asp-action="UsuariosReport" target="_blank">
            <i class="fa-solid fa-file-pdf"></i> PDF Usuario
        </a>
    </div>
</div>
<br />

@if (TempData["MensagemSucesso"] != null) {
<div class="alert alert-success" role="alert" style="text-align: center;">
    <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
    @TempData["MensagemSucesso"]
</div>
} @if (TempData["MensagemErro"] != null) {
<div class="alert alert-danger" role="alert">
    <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
    @TempData["MensagemErro"]
</div>
}

<table id="myTable" class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datacadastro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>*@
                <td>
                    @Html.DisplayFor(modelItem => item.NomeUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datacadastro)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id"><i class="fa fa-search"></i></a>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal-@item.Id">
                        <i class="fa fa-trash"></i>
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="DeleteModal-@item.Id" tabindex="-1" aria-labelledby="DeleteModal" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="DeleteModal">Excluir Usuário</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Deseja realmente excluir o usuário: @item.NomeUsuario ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Não</button>
                                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Sim</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>