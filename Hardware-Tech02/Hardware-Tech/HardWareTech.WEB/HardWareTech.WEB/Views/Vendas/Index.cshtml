@model IEnumerable<HardWareTech.DATA.Models.VwProdutoClienteVenda>

@{
    ViewData["Title"] = "Venda";
}

<h1>Listagem de Vendas</h1>
<hr />

<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <div>
        <a class="btn btn-primary" role="button" asp-controller="Vendas" asp-action="Venda"><i class="fa fa-plus-circle"></i> Nova Venda</a>
    </div>
    <div>
        <a class="btn btn-danger" role="button" asp-controller="Vendas" asp-action="VendasReport" target="_blank">
            <i class="fa-solid fa-file-pdf"></i> PDF Venda
        </a>
    </div>
</div>

<br />


<table id="myTable" class="table table-striped">
